ZSH_ROOT=${HOME}/dotfiles/zsh

for ZSH_FILE in checks aliases bindkeys colors completion exports functions \
                history prompt setopt zsh_hooks; do

    filename=$ZSH_ROOT/includes/$ZSH_FILE.zsh
    if [[ -s $filename ]]; then
        eval source $filename
    fi
done

if [[ -s $ZSH_ROOT/scipts/z.sh ]]; then
    eval source $ZSH_ROOT/scripts/z.sh
fi

if [[ -s $ZSH_ROOT/zshrc.local ]]; then
    source $ZSH_ROOT/zshrc.local
fi
