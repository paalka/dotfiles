ZSH_ROOT=${HOME}/dotfiles/zsh

for ZSH_FILE in aliases bindkeys checks colors completion exports functions \
                history prompt setopt zsh_hooks; do
    if [[ -s $ZSH_ROOT/$ZSH_FILE.zsh ]]; then
        eval source $ZSH_ROOT/$ZSH_FILE.zsh
    fi
done

source $ZSH_ROOT/z.sh

if [[ -s $HOME/dotfiles/zsh/zshrc.local ]]; then
    source $HOME/dotfiles/zsh/zshrc.local
fi
